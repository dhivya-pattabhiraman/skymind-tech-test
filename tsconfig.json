{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@pages/*": ["./src/page-objects/pages/*"]
    }
  },
  "include": ["playwright.config.ts", "src"]
}
